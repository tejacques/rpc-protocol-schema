{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "sourceMap": true,
        "rootDir": "src",
        "outDir": "bin",
        "sourceRoot": "src",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noImplicitThis": true,
        //"noFallthroughCasesInSwitch": true,
        "strictNullChecks": true,
        "watch": true
    }
}